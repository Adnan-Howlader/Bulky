@model List<Category> 
<!--declaring the type of parameter passed from controller above-->



<!--include partial view for notification-->
@Html.Partial("_Notification")


<div class="container">
    
    <div class="row">
        <div class="col-md-6">
            <h2>Category List</h2>
        </div>
        <div class="col-md-6">
            <a class="btn btn-primary float-end" asp-controller="Category" asp-action="Create">Create New Category</a>

        </div>
        
    </div>



    <table class="table table-bordered table-striped ">
        <tr>
            <th>Category Name</th>
            <th>Display order</th>
            <th></th>
        </tr>




        @foreach (var item in Model.OrderBy(u => u.DisplayOrder)) //Model is the list of category object passed from controller
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>
                  
                    
                    <a class="btn btn-primary h-40" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="bi bi-pencil-square">Edit</i>
                    </a>
                    <a class="btn btn-primary h-40" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="bi bi-trash">Delete</i>
                    </a>

                </td>
            </tr>
        }

    </table>
</div>


