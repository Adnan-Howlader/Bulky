@model ShoppingCartVM


<form method="post">
    <div class="cart_section">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-10 offset-lg-1">
                    <div class="cart_container">
                        <div class="cart_title">Shopping Cart</div>
                        <div class="cart_items">
                            <ul class="cart_list">
                                @foreach (var cart in @Model.ListCart)
                                {
                                    <li class="cart_item clearfix">

                                        <div class="">
                                            <img style="border-radius: 10%" src="@cart.Product.ImageUrl" alt="" width="100" height="100">
                                        </div>
                                        <div class="cart_item_info d-flex flex-md-row flex-column justify-content-between">
                                            <div class="cart_item_name cart_info_col">
                                                <div class="cart_item_text"> Title </div>

                                                <div class="cart_item_text">@cart.Product.Title</div>
                                            </div>

                                            <div class="cart_item_quantity cart_info_col">
                                                <div class="cart_item_title">Quantity</div>
                                                <div class="cart_item_text">@cart.Count</div>
                                            </div>
                                            <div class="cart_item_price cart_info_col">
                                                <div class="cart_item_title">Price</div>
                                                <div class="cart_item_text">$@cart.Product.Price</div>
                                            </div>


                                            <div class="cart_item_total cart_info_col">
                                                <div class="cart_item_title">Total</div>
                                                <div class="cart_item_text">$@(cart.Product.Price * cart.Count)</div>
                                            </div>

                                            <!--plus button-->
                                            <div class="cart_item_total cart_info_col">

                                                <div class="cart_item_text">
                                                    <a asp-action="plus" asp-route-cartId="@cart.Id">
                                                        <i class="bi bi-plus-square-fill"></i>
                                                    </a>
                                                </div>


                                            </div>
                                            <!--minus button-->
                                            <div class="cart_item_total cart_info_col">

                                                <div class="cart_item_text">
                                                    <a asp-action="minus" asp-route-cartId="@cart.Id">
                                                        <i class="bi bi-dash-square-fill"></i>
                                                    </a>
                                                </div>
                                            </div>
                                            <!--remove button-->
                                            <div class="cart_item_total cart_info_col">

                                                <div class="cart_item_text">
                                                    <a asp-action="remove" asp-route-cartId="@cart.Id">
                                                        <i class="bi bi-trash-fill"></i>
                                                    </a>
                                                </div>
                                            </div>


                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                        <div class="order_total">
                            <div class="order_total_content text-md-right">
                                <div class="order_total_title">Order Total:</div>
                                <div class="order_total_amount">$@Model.OrderHeader.OrderTotal</div>
                            </div>
                        </div>
                        <div class="cart_buttons">
                            <a asp-area="Customer" asp-controller="Home" asp-action="Index">
                                <button type="button" class="btn btn-success">Continue Shopping</button>
                            </a>
                            <a asp-action="Summary" >
                                <button type="button" class="btn btn-success">Summary</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>