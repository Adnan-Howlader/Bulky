
@model Tuple<Product,Category>







<div class="col-lg-12 col-sm-6">
    <div class="row p-2">
        <div class="col-3 p-1">
            <div class="card border-0 p-3 shadow border-top border-5 rounded">
                <img src="@Model.Item1.ImageUrl" class="card-img-top rounded"/>
            </div>
        </div>
        <div class="col-9 p-3">
            <div class="card-body">
                <h5>@Model.Item1.Title</h5>
                <p>by @Model.Item1.Director</p>
                <p>Price: @Model.Item1.Price$</p>
                <p>Category: @Model.Item2.Name</p>
                <p>Sypnosis: @Model.Item1.Description</p>
            </div>
         
            <div>
                <input  type="number" id="incrementAmountInput" min="1" value="1" max="5" />
            </div>
            
            <div class="btn-group p-2 ">
             
                
                <button id="cart" class="btn btn-primary">Add to Cart</button>
               


            </div>
            
        </div>
     
    </div>


</div>

<script>
    let amount = 1;
    document.getElementById("incrementAmountInput").addEventListener("change", function() {
        amount = parseInt(this.value);
    });

    document.getElementById("increaseButton").addEventListener("click", function() {
        amount+= 1;
  
                  
        document.getElementById("counterSpan").innerHTML = amount; 
                         
    

    document.getElementById("decreaseButton").addEventListener("click", function() {
        
        
             amount-=1;
         
          
             document.getElementById("counterSpan").innerHTML = amount; 
         
               
    
    
    
       
    })});
</script>